VERSON 1

class Counselor:
 def __init__(self, name, schedule, email):
     self.name = name
     self.schedule = schedule
     self.email = email

 def get_name(self):
      return self.name
 def get_email(self):
      return self.email
 def get_schedule(self):
      return self.schedule
 def update_schedule(self, new_schedule):
     self.schedule = new_schedule
  
counselor_1= Counselor('Case Scout', "Mon-Fri 2-5PM", "cscout@up.edu.ph")
counselor_2= Counselor('test user', "MTTH 1-4pm", "testusere@up.edu.ph" )

print(counselor_1.get_name())
print(counselor_1.get_email())
print(counselor_1.get_schedule())

counselor_1.update_schedule("New schedule: TTH 1-3PM")
print(counselor_1.get_schedule())
-----------------------------------------------------------
VERSON 2

class Counselor:
    def __init__(self, name, schedule):
        self.name = name
        self.schedule = schedule
        self.email = name.lower().replace(" ", "") + "@up.edu.ph"

    def get_name(self):
        return self.name

    def get_email(self):
        return self.email

    def get_schedule(self):
        return self.schedule

    def update_schedule(self, new_schedule):
        self.schedule = new_schedule


# Create counselor instances
counselor_1 = Counselor('Case Scout', "Mon-Fri 2-5PM")
counselor_2 = Counselor('Test User', "MTTH 1-4PM")

# Access info
name = counselor_1.get_name()
email = counselor_1.get_email()
schedule = counselor_1.get_schedule()

# Print info
print("Name:", name)
print("Email:", email)
print("Schedule:", schedule)

# Update schedule and print again
counselor_1.update_schedule("Update schedule: TTH 1-3PM")
print(counselor_1.get_schedule())
